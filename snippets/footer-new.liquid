<section class="bg-green">
    <div class="container">
        <div class="row bg-tree footer-main">
            <div class="col-lg-4 col-12 footer-logo">
              <a href="{{ routes.root_url }}">
                <img src="{{ settings.footer_logo | image_url }}" width="auto" height="auto">
              </a>
              <div class="d-flex social-icons">
                <a href="https://www.instagram.com/">
                    <img src="{{ settings.social_instagram_logo | image_url }}">
                </a>
                <a href="https://www.facebook.com/">
                    <img src="{{ settings.social_facebook_logo | image_url }}">
                </a>
                <a href="https://www.youtube.com/">
                    <img src="{{ settings.social_youtube_logo | image_url }}">
                </a>
                <a href="https://www.tiktok.com/">
                    <img src="{{ settings.social_tiktok_logo | image_url }}">
                </a>
              </div>
              <div class="d-flex justify-content-between mb-2 legal-links">
                <div>Â© 2022 | Wanlow</div>
                <div>Privacy Policy</div>
                <div>Terms & Conditions</div>
            </div>
            </div>
            <div class="col-lg-3 col-12 d-flex flex-column footer-links">
                {% for link in linklists.footer.links -%}
                    {{ link.title | link_to: link.url }}
                {%- endfor %}
            </div>
            <div class="col-lg-5 col-12 newsletter-col">
                <h5 class="newsletter-heading">Sign Up To Receive Exclusive Offers, Content And More!</h5>
                <div>
                    {%- form 'customer', id: 'ContactFooter', class: 'footer-newsletter' -%}
                    <input type="hidden" name="contact[tags]" value="newsletter">
                    <div>
                        <div>
                        <input
                            id="NewsletterForm--{{ section.id }}"
                            class="footer-newsletter-input"
                            type="email"
                            name="contact[email]"
                            value="{{ form.email }}"
                            aria-required="true"
                            autocorrect="off"
                            autocapitalize="off"
                            autocomplete="email"
                            required
                        >
                        <button
                            type="submit"
                            class="btn btn-primary btn-banner"
                            name="commit"
                            id="Subscribe"
                        >
                            Sign in
                        </button>
                        </div>
                    </div>
                    {%- endform -%}
                </div>
            </div>
        </div>
    </div>
</section>