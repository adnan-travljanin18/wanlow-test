<style>
  .bg-gray {
    background-color: #EAE8E7;
  }
  .menu-links a {
    padding: 0 20px;
    text-decoration: none;
    color: #483729;
  }
  .header-actions {
    gap: 15px;
  }
  @media screen and (max-width:991px){
    .logo-desktop {
      display: none;
    }
  }
  @media (min-width: 769px) {
    .burger-menu-content {
        display: none;
    }
}

@media (max-width: 768px) {
    .menu-links {
        display: none;
    }

    .burger-menu {
        display: block;
    }
}

.burger-menu {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    padding: 0;
}
</style>

<section class="bg-gray">
    <div class="container">
        <div class="row justify-content-between align-items-center py-3 px-4">
            <div class="d-lg-none col-12 text-center">
                <a href="{{ routes.root_url }}">
                    <img src="{{ settings.logo | image_url }}" width="auto" height="auto">
                </a>
            </div>
            <div class="col-lg-2 logo-desktop">
                <a href="{{ routes.root_url }}">
                    <img src="{{ settings.logo | image_url }}" width="auto" height="auto">
                </a>
            </div>
            <div class="col-lg-5 col-6 d-flex align-items-center justify-content-end header-actions">
                <div class="burger-menu" onclick="toggleBurgerMenu()">
                    â˜°
                </div>
                {% render "get-started" %}
                {%- if shop.customer_accounts_enabled -%}
                    <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}">
                        {% render 'icon-account' %}
                    </a>
                {%- endif -%}
                <a href="{{ routes.cart_url }}">
                    {%- liquid
                        if cart == empty
                            render 'icon-cart-empty'
                        else
                            render 'icon-cart'
                        endif
                    -%}
                    {%- if cart != empty -%}
                        <div>
                            {%- if cart.item_count < 100 -%}
                                <span aria-hidden="true">{{ cart.item_count }}</span>
                            {%- endif -%}
                            <span>{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
                        </div>
                    {%- endif -%}
                </a>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 burger-menu-content" id="burger-menu">
                {% for link in linklists.main-menu.links -%}
                    {{ link.title | link_to: link.url }}
                {%- endfor %}
            </div>
        </div>
    </div>
</section>

<script>
  function toggleBurgerMenu() {
    var burgerMenuContent = document.getElementById("burger-menu");
    burgerMenuContent.style.display = (burgerMenuContent.style.display === 'none' || burgerMenuContent.style.display === '') ? 'block' : 'none';
}
</script>