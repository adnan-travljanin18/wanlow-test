<style>
  .bg-gray {
    background-color: #EAE8E7;
  }
  .menu-links a {
    padding: 0 20px;
    text-decoration: none;
    color: #483729;
  }
  .sidebar {
    position: fixed;
    top: 0;
    left: -300px; /* Initially hidden */
    width: 300px;
    height: 100%;
    overflow-y: auto;
    transition: left 0.3s ease;
  }
  .sidebar.show {
    left: 0; /* Show sidebar */
  }
</style>

<section class="bg-gray">
  <div class="container">
    <div class="row justify-content-between align-items-center py-3 px-4">
      <div class="col-12 col-lg-5 menu-links">
        {% for link in linklists.main-menu.links -%}
          {{ link.title | link_to: link.url }}
        {%- endfor %}
      </div>
      <div class="col-12 col-lg-5 d-none d-lg-block">
        <a href="{{ routes.root_url }}">
          <img src="{{ settings.logo | image_url }}" width="auto" height="auto">
        </a>
      </div>
      <div class="col-12 col-lg-2 d-flex align-items-center justify-content-between">
        {% render "get-started" %}
        {%- if shop.customer_accounts_enabled -%}
          <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}">
            {% render 'icon-account' %}
          </a>
        {%- endif -%}
        <a href="{{ routes.cart_url }}">
          {%- liquid
            if cart == empty
              render 'icon-cart-empty'
            else
              render 'icon-cart'
            endif
          -%}
          {%- if cart != empty -%}
            <div>
              {%- if cart.item_count < 100 -%}
                <span aria-hidden="true">{{ cart.item_count }}</span>
              {%- endif -%}
              <span>{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
            </div>
          {%- endif -%}
        </a>
      </div>
      <div class="col-12 d-block d-lg-none">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menuSidebar" aria-controls="menuSidebar" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  function toggleSidebar() {
    var sidebar = document.getElementById('menuSidebar');
    sidebar.classList.toggle('show');
  }
</script>