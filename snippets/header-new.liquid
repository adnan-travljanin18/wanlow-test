<style>
  .bg-gray {
    background-color: #EAE8E7;
  }
  .menu-links a {
    padding: 0 20px;
    text-decoration: none;
    color: #483729;
  }
  .header-actions {
    gap: 15px;
  }
  .menu-links {
    display: flex;
    justify-content: flex-end;
  }
  #burger-menu {
      display: none; /* Initially hide the burger menu */
  }

  #burger-button {
      display: block; /* Show the burger button */
  }

  /* Media query for screens 768px and below */
  @media (max-width: 768px) {
      #normal-menu {
          display: none; /* Hide the normal menu */
      }

      #burger-menu {
          display: block; /* Show the burger menu */
      }

      #burger-menu .menu-links {
          display: none; /* Initially hide the links in the burger menu */
      }
  }
  @media screen and (max-width:991px){
    .logo-desktop {
      display: none;
    }
  }
</style>

<section class="bg-gray">
    <div class="container">
        <div class="row justify-content-between align-items-center py-3 px-4">
            <div class="d-lg-none col-12 text-center">
              <a href="{{ routes.root_url }}">
                <img src="{{ settings.logo | image_url }}" width="auto" height="auto">
              </a>
            </div>
            <div class="col-lg-5 col-6 menu-links" id="normal-menu">
                {% for link in linklists.main-menu.links -%}
                    {{ link.title | link_to: link.url }}
                {%- endfor %}
            </div>

            <div id="burger-menu">
                <button id="burger-button" onclick="toggleBurgerMenu()">â˜° Menu</button>
                <div class="col-lg-5 col-6 menu-links">
                    {% for link in linklists.main-menu.links -%}
                        {{ link.title | link_to: link.url }}
                    {%- endfor %}
                </div>
            </div>
            <div class="col-lg-2 logo-desktop">
              <a href="{{ routes.root_url }}">
                <img src="{{ settings.logo | image_url }}" width="auto" height="auto">
              </a>
            </div>
            <div class="col-lg-5 col-6 d-flex align-items-center justify-content-end header-actions">
              {% render "get-started" %}
              {%- if shop.customer_accounts_enabled -%}
                <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}">
                  {% render 'icon-account' %}
                </a>
              {%- endif -%}
              <a href="{{ routes.cart_url }}">
                {%- liquid
                  if cart == empty
                    render 'icon-cart-empty'
                  else
                    render 'icon-cart'
                  endif
                -%}
                {%- if cart != empty -%}
                  <div>
                    {%- if cart.item_count < 100 -%}
                      <span aria-hidden="true">{{ cart.item_count }}</span>
                    {%- endif -%}
                    <span>{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
                  </div>
                {%- endif -%}
              </a>
            </div>
        </div>
    </div>
</section>

<script>
  function toggleBurgerMenu() {
    var menu = document.getElementById("burger-menu").getElementsByClassName("menu-links")[0];
    if (menu.style.display === "none" || menu.style.display === "") {
        menu.style.display = "flex";
    } else {
        menu.style.display = "none";
    }
}
</script>