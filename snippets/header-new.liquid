<style>
  .menu-links a {
    padding: 0 20px;
    text-decoration: none;
    color: #483729;
  }
</style>

<section>
    <div class="container">
        <div class="row justify-content-between align-items-center py-3 px-4">
            <div class="col-5 menu-links">
                {% for link in linklists.main-menu.links -%}
                    {{ link.title | link_to: link.url }}
                {%- endfor %}
            </div>
            <div class="col-5">
              <a href="{{ routes.root_url }}">
                <img src="{{ settings.logo | image_url }}" width="auto" height="auto">
              </a>
            </div>
            <div class="col-2 d-flex align-items-center justify-content-between">
              {% render "get-started" %}
              {%- if shop.customer_accounts_enabled -%}
                <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}">
                  {% render 'icon-account' %}
                </a>
              {%- endif -%}
              <a href="{{ routes.cart_url }}">
                {%- liquid
                  if cart == empty
                    render 'icon-cart-empty'
                  else
                    render 'icon-cart'
                  endif
                -%}
                {%- if cart != empty -%}
                  <div>
                    {%- if cart.item_count < 100 -%}
                      <span aria-hidden="true">{{ cart.item_count }}</span>
                    {%- endif -%}
                    <span>{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
                  </div>
                {%- endif -%}
              </a>
            </div>
        </div>
    </div>
</section>