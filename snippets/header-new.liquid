<style>
  .bg-gray {
    background-color: #EAE8E7;
  }
  .menu-links a {
    padding: 0 20px;
    text-decoration: none;
    color: #483729;
  }
  .header-actions {
    gap: 15px;
  }
  #sidebar {
    display: none;
    position: fixed;
    top: 122px;
    left: 0;
    height: 100%;
    width: 250px;
    background-color: #ffffff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    z-index: 9999;
}

#sidebar .menu-links {
    padding: 20px;
}

#burger-menu {
    display: block;
}

@media (max-width: 768px) {
    #burger-menu {
        display: block;
    }
    .bg-gray {
      position: sticky;
      top: 0;
      z-index: 100;
    }
}

@media (max-width: 991px) {
    .logo-desktop {
        display: none;
    }
}

.header {
    padding-right: 270px; /* Adjusted padding for the sidebar */
}
</style>

<section class="bg-gray">
    <div class="container">
        <div class="row justify-content-between align-items-center py-3 px-4" id="header">
            <div class="d-lg-none col-12 text-center">
                <a href="{{ routes.root_url }}">
                    <img src="{{ settings.logo | image_url }}" width="auto" height="auto">
                </a>
            </div>

            <div id="burger-menu" class="col-6">
                <button id="burger-button" onclick="toggleSidebar()">â˜° Menu</button>
            </div>

            <div id="sidebar">
                <div class="col-12 menu-links">
                    {% for link in linklists.main-menu.links -%}
                        {{ link.title | link_to: link.url }}
                    {%- endfor %}
                </div>
            </div>

            <div class="col-lg-2 logo-desktop">
                <a href="{{ routes.root_url }}">
                    <img src="{{ settings.logo | image_url }}" width="auto" height="auto">
                </a>
            </div>

            <div class="col-lg-5 col-6 d-flex align-items-center justify-content-end header-actions">
                {% render "get-started" %}
                {%- if shop.customer_accounts_enabled -%}
                    <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}">
                        {% render 'icon-account' %}
                    </a>
                {%- endif -%}
                <a href="{{ routes.cart_url }}">
                    {%- liquid
                        if cart == empty
                            render 'icon-cart-empty'
                        else
                            render 'icon-cart'
                        endif
                    -%}
                    {%- if cart != empty -%}
                        <div>
                            {%- if cart.item_count < 100 -%}
                                <span aria-hidden="true">{{ cart.item_count }}</span>
                            {%- endif -%}
                            <span>{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
                        </div>
                    {%- endif -%}
                </a>
            </div>
        </div>
    </div>
</section>

<script>
  function toggleSidebar() {
    var sidebar = document.getElementById("sidebar");
    if (sidebar.style.display === "none" || sidebar.style.display === "") {
        sidebar.style.display = "block";
    } else {
        sidebar.style.display = "none";
    }
}

</script>