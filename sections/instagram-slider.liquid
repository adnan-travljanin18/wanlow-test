<style>
    .custom-swiper-container .swiper {
    width: 100%;
    height: 100%;
    }

    .custom-swiper-container .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    }

    .custom-swiper-container .swiper-slide img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    }
</style>

<section class="bg-gray">
    <div class="container custom-swiper-container">
        <div class="swiper instagram-slider">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide">
                  <img src="{{ block.settings.image | image_url }}" alt="Slide {{ forloop.index }}">
                </div>
              {% endfor %}
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
          </div>
    </div>
</section>


<script src="{{ 'instagram-slider.js' | asset_url }}"></script>

{% schema %}
    {
      "name": "Instagram Slider",
      "settings": [
        {
          "type": "text",
          "id": "section_title",
          "label": "Section Title",
          "default": "Swiper Slider"
        }
      ],
      "blocks": [
        {
          "type": "image",
          "name": "Image Block",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            }
          ]
        }
      ],
      "presets": [
        {
          "category": "Slideshow",
          "name": "Instagram Slider"
        }
      ]
    }
    {% endschema %}
    