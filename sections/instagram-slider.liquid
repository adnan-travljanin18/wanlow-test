<section>
    <div class="container">
        <div class="swiper instagram-slider">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide">
                  <img src="{{ block.settings.image | image_url }}" alt="Slide {{ forloop.index }}">
                </div>
              {% endfor %}
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
          </div>
    </div>
</section>


<script src="{{ 'instagram-slider.js' | asset_url }}"></script>

{% schema %}
    {
      "name": "Instagram Slider",
      "settings": [
        {
          "type": "text",
          "id": "section_title",
          "label": "Section Title",
          "default": "Swiper Slider"
        }
      ],
      "blocks": [
        {
          "type": "image",
          "name": "Image Block",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            }
          ]
        }
      ],
      "presets": [
        {
          "category": "Slideshow",
          "name": "Instagram Slider"
        }
      ]
    }
    {% endschema %}
    