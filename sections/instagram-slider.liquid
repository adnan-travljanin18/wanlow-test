<style>
    .custom-swiper-container .swiper {
    width: 100%;
    height: 100%;
    }

    .custom-swiper-container .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    }

    .custom-swiper-container .swiper-slide img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    }
    .custom-swiper-container a {
      text-decoration: none;
    }
    .instagram-button {
      display: inline-flex;
      align-items: center;
      gap: 5px;
      background-color: #7EC6BC;
      border-color: #7EC6BC;
      color: #000;
      padding: 10px 20px;
    }
    .instagram-button svg {
      width: 22px;
      height: 25px;
    }
    .instagram-button:hover {
      color: #fff;
      background-color: #629A92;
      border-color: #7EC6BC;
    }
</style>

<section class="bg-gray py-md-5 py-4">
    <div class="container custom-swiper-container text-center">
      <h1>{{ section.settings.section_title }}</h1>
      <div class="swiper instagram-slider py-lg-5 py-4">
          <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide">
                  <img src="{{ block.settings.image | image_url }}" alt="Slide {{ forloop.index }}">
                </div>
              {% endfor %}
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
        <a href="{{ section.settings.button_link }}">
          <button class="btn button-primary instagram-button">
            <span>
              {% render 'icon-instagram' %}
              
            </span>
            <div>{{ section.settings.button_text }}</div>
          </button>
        </a>
    </div>
</section>


<script src="{{ 'instagram-slider.js' | asset_url }}"></script>

{% schema %}
    {
      "name": "Instagram Slider",
      "settings": [
        {
          "type": "text",
          "id": "section_title",
          "label": "Section Title"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Instagram Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Instagram Link"
        },
        {
          "type": "image_picker",
          "id": "instagram_icon",
          "label": "Instagram Icon"
        }
      ],
      "blocks": [
        {
          "type": "image",
          "name": "Image Block",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            }
          ]
        }
      ],
      "presets": [
        {
          "category": "Slideshow",
          "name": "Instagram Slider"
        }
      ]
    }
    {% endschema %}
    