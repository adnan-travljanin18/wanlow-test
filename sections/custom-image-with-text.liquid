<section>
  <div>
    <div>
      <div class="col-6">
        <h1>{{ section.settings.section_heading }}<span><img src="{{ section.settings.three_stars | image_url }}" alt="three stars"></span></h1>
        <p>{{ section.settings.section_text }}</p>
        
        <!-- Loop through blocks -->
        {% for block in section.blocks %}
          {% unless block.settings.list_decoration == blank or block.settings.list_item == blank %}
            <div>
              <div>
                <p><span><img src="{{ block.settings.list_decoration | image_url }}" alt="star"></span> {{ block.settings.list_item }}</p>
              </div>
            </div>
          {% endunless %}
          {% unless block.settings.button_text == blank or block.settings.button_link == blank %}
            <a href="{{ block.settings.button_link }}">
              <button>{{ block.settings.button_text }}</button>
            </a>
          {% endunless %}
        {% endfor %}
        <!-- End block loop -->

      </div>
      <div class="col-6">
        text
      </div>
    </div>
  </div>
</section>